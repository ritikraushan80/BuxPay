package com.example.aswitch

import androidx.appcompat.app.AppCompatActivity
import android.os.Bundle
import android.widget.SeekBar
import android.widget.Switch
import android.widget.TextView
import android.widget.Toast

class MainActivity : AppCompatActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main)

        val auto = findViewById<Switch>(R.id.auto)
        auto.setOnCheckedChangeListener { Button, id ->
            if (auto.isChecked) {
                Toast.makeText(this, "AutoPlay Clicked ", Toast.LENGTH_SHORT).show()
            }
        }

        val on = findViewById<Switch>(R.id.on)
        on.setOnCheckedChangeListener { Button, id ->
            if (on.isChecked) {
                Toast.makeText(this, "On/Off Clicked ", Toast.LENGTH_SHORT).show()
            }
        }


        /////////////////////// seekbar /////////////////////////////////////